{
  "compilerOptions": {
    // We'll be needing this
    "jsx": "React",
    "target": "ESNext",
    "module": "ES2015",
    // Could maybe let the root index.*.js not be TS
    "rootDir": "lib",
    // Act like babel
    "allowSyntheticDefaultImports": true,
    // Be a bit more strict
    "noImplicitAny": true,
    "strictNullChecks" : true,
    "preserveConstEnums": true,
    // General settings
    "allowJs": true,
    "sourceMap": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
